module UpCounterNbit #(parameter WIDTH = 8, parameter MAX_VALUE = 255) (
    input clock,
    input reset,
    input enable,
    output reg [WIDTH-1:0] countValue
);
always @(posedge clock or posedge reset) begin
    if (reset)
        countValue <= 0;
    else if (enable) begin
        if (countValue == MAX_VALUE)
            countValue <= 0;
        else
            countValue <= countValue + 1'b1;
    end
end
endmodule